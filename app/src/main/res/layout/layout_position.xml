<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/border_bottom"
    android:layout_marginBottom="10dp"
    android:paddingBottom="7dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgPosition"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/position" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/imgPosition"
        android:textSize="20sp"
        android:textColor="#fff"
        android:hint="Name"
        android:id="@+id/tvPositionName"/>

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="35dp"
        android:layout_height="31dp"
        android:layout_row="0"
        android:layout_column="16"
        android:background="@android:color/transparent"
        android:drawableLeft="@android:drawable/ic_menu_delete"
        android:paddingLeft="5dp"
        android:drawableTint="#FABE0B0B"
        android:textColorHighlight="#FABE0B0B"
        android:textColorLink="#FABE0B0B" />

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="38dp"
        android:layout_height="31dp"
        android:layout_row="0"
        android:layout_column="15"
        android:layout_marginRight="10dp"
        android:drawableTint="#fff"
        android:textColorHighlight="#fff"
        android:textColorLink="#fff"
        android:background="@android:color/transparent"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:drawablePadding="20dp"
        android:padding="5dp" />


</GridLayout>

